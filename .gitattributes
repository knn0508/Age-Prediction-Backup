# Handle line endings automatically for files detected as text
# and leave all files detected as binary untouched.
* text=auto

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout.
*.py text eol=lf
*.sh text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.cfg text eol=lf
*.ini text eol=lf

# Dockerfile and related files
Dockerfile text eol=lf
.dockerignore text eol=lf
start.sh text eol=lf

# Windows batch files should use CRLF
*.bat text eol=crlf

# Binary files (explicitly declared)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.pyc binary
*.pkl binary
*.onnx binary
*.h5 binary
*.pb binary

# Git LFS (Large File Storage) - uncomment if using large model files
# *.onnx filter=lfs diff=lfs merge=lfs -text
# *.pkl filter=lfs diff=lfs merge=lfs -text
# *.h5 filter=lfs diff=lfs merge=lfs -text
# *.pb filter=lfs diff=lfs merge=lfs -text

# Export-ignore (files not included in git archive)
.gitattributes export-ignore
.gitignore export-ignore
.git export-ignore
test_docker.sh export-ignore
test_docker.bat export-ignore
test_setup.py export-ignore
